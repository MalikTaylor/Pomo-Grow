<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/assets/styles.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Pomo-Grow</title>
    
</head>
<body id="login-body" style="background-color: #FFE373">
    <nav class="navbar row">
        <a id="logo" href="/">Pomo-Gr<img class="icon" src="/public/assets/images/logo-icon.png">w</a>
    </nav>
    <main class="container">
        <div class="page-container">
            <div class="login-container">
                <h1 class="text-center form-header">Login</h1>
                <form action="/login" method="POST">
                    <div>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email"></input>
                        <div class="login-error-message" id="email-error-message-container"> 
                            <% if(messages.error == "Email does not exist") { %>
                                <i class="fas fa-times-circle"></i>
                                <%= messages.error %>
                            <% } %>
                        </div>
                    </div>

                    <div>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password">
                        <div class="login-error-message" id="password-error-message-container"> 
                            <% if(messages.error == "Password incorrect") { %>
                                <i class="fas fa-times-circle"></i>
                                <%= messages.error %>
                            <% } %>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="form-btn btn-lg">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="signup">
            <p>
                Don't have an account?
                <br>
                <a href="/Register">Sign Up</a>
            </p>
        </div>
        <div>
            <img id="login-img" src="/public/assets/images/LoginPageTreeIMG.png" width="561" height="818" z-index="10">
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
